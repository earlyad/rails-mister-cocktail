<div class="container">
  <h1>Welcome to the cocktails app!</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= render 'cocktail_card',
        cocktail: cocktail %>
      </div>
    <% end %>
  </div>
  <%= link_to 'New Cocktail', new_cocktail_path, :class => 'btn btn-primary' %>
</div>




